<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.navigation.smartcane.RegisterActivity"
    android:padding="10sp">
    <TextView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_back_arrow"
        android:contentDescription="go back"
        android:onClick="goBackPressed"
        android:textColor="#00000000" />

    <TextView
        android:id="@+id/idTVHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="REGISTER"
        android:textAlignment="center"
        android:contentDescription="REGISTER"
        android:textSize="20dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/idEdtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:hint="Name"

        />

    <EditText
        android:id="@+id/idEdtMessage0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:hint="Serial Number"
       />
    <EditText
        android:id="@+id/idEdtMessage1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:hint="Email-Id"
       />
    <EditText
        android:id="@+id/idEdtMessage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:hint="Mobile Number"
        />

    <!--button for saving data-->
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:padding="10dp"
        app:cardBackgroundColor="#EBE2E2"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_gravity="center">
    <Button
        android:id="@+id/BtnSubmit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="SUBMIT"
        android:textColor="@color/black"
        android:backgroundTint="#EBE2E2"
        android:contentDescription="submit"
        android:textSize="18dp"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>