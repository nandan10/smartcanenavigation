<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp">

    <TextView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_back_arrow"
        android:contentDescription="go back"
        android:onClick="goBackPressed"
        android:textColor="#00000000" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="INTENSITY"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:contentDescription="intensity"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_margin="50dp"

            android:padding="50dp"
            app:cardBackgroundColor="#E8D5C9"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">


            <TextView
                android:id="@+id/vibration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E8D5C9"
                android:contentDescription="vibration"
                android:text="VIBRATION"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"

            >

            <Button
                android:id="@+id/bt1"
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:layout_marginTop="35dp"
                android:background="@color/white"
                android:contentDescription="Increase"
                android:foreground="@drawable/img24"
                android:onClick="count"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/tx1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/bt2"
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:layout_marginTop="35dp"
                android:background="@color/white"
                android:contentDescription="decrease"
                android:foreground="@drawable/img25"
                android:onClick="count1"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_margin="50dp"

            android:padding="10dp"
            app:cardBackgroundColor="#E8D5C9"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">


            <TextView
                android:id="@+id/buzzer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E8D5C9"
                android:contentDescription="BUZZER"
                android:text="BUZZER"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:id="@+id/bt3"
                android:layout_width="40dp"

                android:layout_height="44dp"
                android:layout_marginTop="35dp"
                android:background="@color/white"
                android:contentDescription="increase"
                android:foreground="@drawable/img24"
                android:onClick="count3"
                android:textSize="30sp" />
            <!--creating a counter fab for incrementing a count-->
            <TextView
                android:id="@+id/tx2"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:text="5"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/bt4"
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:layout_marginTop="35dp"
                android:background="@color/white"
                android:contentDescription="decrease"
                android:foreground="@drawable/img25"
                android:onClick="count4"
                android:textSize="30sp" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>