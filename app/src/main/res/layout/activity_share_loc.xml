<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="khushboo.rohit.osmnavi.com.rohit.osmnavi.shareLocActivity">
    <!--android:paddingBottom="5sp"-->
    <!--android:paddingTop="5sp"-->

    <ListView
        android:id="@+id/conlist_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="30" />

    <!--TextView
        android:id="@+id/textViewshareLoc"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="30"
        android:text="TextView"
        android:textSize="20sp" /-->


    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0" />

    <Button
        android:id="@+id/buttonAddContact"
        android:contentDescription="Add New Contact"
        android:layout_width="match_parent"
        android:layout_weight="30"
        android:layout_height="30dp"
        android:background="#30302e"
        android:text="ADD CONTACT"
        android:onClick="add"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0" />

    <Button
        android:id="@+id/buttonExitContact"
        android:contentDescription="Exit Share Location"
        android:layout_width="match_parent"
        android:layout_weight="30"
        android:layout_height="30dp"
        android:background="#30302e"
        android:text="Back"
        android:onClick="backto"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0" />

    <Button
        android:id="@+id/buttonclrContact"
        android:contentDescription="Clear Saved Contacts"
        android:layout_width="match_parent"
        android:layout_weight="30"
        android:layout_height="30dp"
        android:background="#30302e"
        android:text="CLEAR CONTACTS"
        android:onClick="clearcon"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

</LinearLayout>
