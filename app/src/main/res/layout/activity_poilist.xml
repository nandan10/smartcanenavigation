<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="khushboo.rohit.osmnavi.com.rohit.osmnavi.POIList">
    <!--android:paddingBottom="5sp"-->
    <!--android:paddingTop="5sp"-->

    <TextView
        android:id="@+id/textViewpoilist"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="30"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:text="TextView"
        android:textSize="30sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0" />

    <ListView
        android:id="@+id/listViewpoilist"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:background="#30302e"
        android:backgroundTint="#30302e"
        android:layout_weight="30" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0" />

    <Button
        android:id="@+id/buttonpoib"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="30"
        android:background="#30302e"
        android:backgroundTint="#30302e"
        android:contentDescription="Back "
        android:onClick="on_backp"
        android:text="BACK"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />


</LinearLayout>

