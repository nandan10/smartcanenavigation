<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="khushboo.rohit.osmnavi.com.rohit.osmnavi.SuggestRoute">
    <!--android:paddingBottom="5sp"-->
    <!--android:paddingTop="5sp"-->

    <Button

        android:layout_width="match_parent"
        android:text=""
        android:contentDescription=" "
        android:id="@+id/button_suggest"
        android:onClick="onSaveSuggest"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_weight="30"
        android:layout_height="30dp"
        android:background="#FF296596"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF296596"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:textSize="40sp" />/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0" />


    <Button
        android:backgroundTint="#FF296596"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:layout_width="match_parent"
        android:text="EDIT NAME"
        android:contentDescription="Edit route name "
        android:id="@+id/button_editSuggest"
        android:onClick="onEditSuggest"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_weight="30"
        android:layout_height="30dp"
        android:background="#FF296596"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />/>

</LinearLayout>