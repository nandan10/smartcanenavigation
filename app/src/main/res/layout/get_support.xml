<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_back_arrow"
            android:contentDescription="go back"
            android:onClick="goBackPressed"
            android:textColor="#00000000" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="GET SUPPORT"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:contentDescription="get support"/>

        <androidx.cardview.widget.CardView

        android:id="@+id/cd11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:onClick="onClick11"
        android:padding="@dimen/cardview_default_elevation"
        app:cardBackgroundColor="#30302e"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </RelativeLayout>

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitStart"


            android:src="@drawable/img_23" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:scaleType="fitCenter"
            android:text="REGISTER"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:contentDescription="register"
            android:textIsSelectable="false"
            android:textSize="18dp"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:id="@+id/cd12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:onClick="onClick12"
        android:padding="@dimen/cardview_default_elevation"
        app:cardBackgroundColor="#30302e"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </RelativeLayout>

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitStart"


            android:src="@drawable/img_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:scaleType="fitCenter"
            android:text="REPORT-ISSUE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="18dp"
            android:contentDescription="report issue"
            />

    </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>