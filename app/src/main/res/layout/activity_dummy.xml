<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="khushboo.rohit.osmnavi.com.rohit.osmnavi.MainActivity">
    <!--android:paddingBottom="5sp"-->
    <!--android:paddingTop="5sp"-->

    <Button
        android:id="@+id/btnSpeak2"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="30"
        android:adjustViewBounds="false"
        android:background="#30302e"
        android:contentDescription="Voice Input "
        android:cropToPadding="false"
        android:onClick="promptSpeechInputView"
        android:soundEffectsEnabled="false"
        android:visibility="visible"
        tools:soundEffectsEnabled="false"
        android:text="VOICE INPUT"
        android:textColor="#FFFFFF"
        android:textSize="40sp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0"/>


    <Button
        android:backgroundTint="#FF296596"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:layout_width="match_parent"
        android:text="SAVED ROUTES"
        android:contentDescription="Load saved route "
        android:id="@+id/button_save"
        android:onClick="onSaveButton"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_weight="30"
        android:layout_height="30dp"
        android:background="#30302e"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0" />

    <Button
        android:id="@+id/button8"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="30"
        android:background="#30302e"
        android:backgroundTint="#30302e"
        android:contentDescription="Start Button "
        android:onClick="onStartButton"
        android:text="START"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0"/>

    <Button
        android:id="@+id/prePlanning"
        android:layout_width="match_parent"
        android:contentDescription="Route Preview "
        android:layout_height="30dp"
        android:layout_weight="30"
        android:background="#30302e"
        android:backgroundTint="#30302e"
        android:onClick="prePlanning"
        android:text="ROUTE PREVIEW"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0" />

    <Button
        android:id="@+id/buttonDebug"
        android:contentDescription="Debug "
        android:layout_width="match_parent"
        android:layout_weight="30"
        android:layout_height="30dp"
        android:background="#30302e"
        android:text="Debug"
        android:onClick="onDebug"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

</LinearLayout>

