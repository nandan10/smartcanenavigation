<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
    <!--android:paddingBottom="5sp"-->
    <!--android:paddingTop="5sp"-->


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_weight="30"
        android:stretchColumns="1,2"
        >
        <TableRow>
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/ending_destination_2"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                android:layout_width="370dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:onClick="search"
                android:contentDescription="Enter Destination "
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btnSpeak2"
                tools:layout="@layout/places_autocomplete_fragment" />

            <Button
                android:id="@+id/btnSpeak2"
                style="@android:style/Widget.Holo.Light.Button.Toggle"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:adjustViewBounds="false"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:contentDescription="Voice Input "
                android:cropToPadding="false"
                android:onClick="promptSpeechInputView"
                android:soundEffectsEnabled="false"
                android:background="@drawable/speechimage"
                android:gravity="center"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:visibility="visible"
                tools:soundEffectsEnabled="false" />

        </TableRow>
    </TableLayout>

    <!--<Button
        android:backgroundTint="#FF296596"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:layout_width="match_parent"
        android:text="SCENE DESCRIPTION"
        android:contentDescription="Scene Description "
        android:id="@+id/button_image"
        android:onClick="onImageButton"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_weight="30"
        android:layout_height="30dp"
        android:background="#FF296596"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0" />!-->

    <Button
        android:backgroundTint="#30302e"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:layout_width="match_parent"
        android:text="WHERE AM I"
        android:contentDescription="Where Am I "
        android:id="@+id/button_wai"
        android:onClick="whereAmI"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_weight="30"
        android:layout_height="30dp"
        android:background="#30302e"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0" />

    <Button
        android:backgroundTint="#30302e"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:layout_width="match_parent"
        android:text="SHARE LOCATION"
        android:contentDescription="Share Your Location "
        android:id="@+id/button_sl"
        android:onClick="shareloc"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_weight="30"
        android:layout_height="30dp"
        android:background="#30302e"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0" />


    <Button
        android:backgroundTint="#30302e"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:layout_width="match_parent"
        android:text="SAVED ROUTES"
        android:contentDescription="Load saved route "
        android:id="@+id/button_save"
        android:onClick="onLoadRouteButton"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_weight="30"
        android:layout_height="30dp"
        android:background="#30302e"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0" />

    <Button
        android:id="@+id/button8"

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="30"
        android:background="#30302e"
        android:backgroundTint="#30302e"
        android:contentDescription="Start "
        android:onClick="onStartButton"
        android:text="START"

        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0"/>

    <Button
        android:id="@+id/prePlanning"
        android:layout_width="match_parent"
        android:contentDescription="Route Preview "
        android:layout_height="30dp"
        android:layout_weight="30"
        android:background="#30302e"
        android:backgroundTint="#30302e"
        android:onClick="onPrePlanButton"
        android:text="ROUTE PREVIEW"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0" />

    <Button
        android:id="@+id/searchpoi"
        android:layout_width="match_parent"
        android:contentDescription="Search Points of Interest "
        android:layout_height="30dp"
        android:layout_weight="30"
        android:background="#30302e"
        android:backgroundTint="#30302e"
        android:onClick="onspoi"
        android:text="SEARCH P O I"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0" />

    <Button
        android:id="@+id/buttonDebug"
        android:contentDescription="Debug"
        android:layout_width="match_parent"
        android:layout_weight="30"
        android:layout_height="30dp"
        android:background="#30302e"
        android:text="Debug"
        android:onClick="onDebug"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

</LinearLayout>

